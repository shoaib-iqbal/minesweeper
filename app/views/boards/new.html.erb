<h1>New Board</h1>

<%= form_with(model: @board, url: boards_path, method: :post, class: "form") do |form| %>
  <div class="mb-3">
    <%= form.label :email, class: "form-label" %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :width, class: "form-label" %>
    <%= form.number_field :width, min: 1, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :height, class: "form-label" %>
    <%= form.number_field :height, min: 1, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :mines, class: "form-label" %>
    <%= form.number_field :mines, min: 0, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <%= form.submit "Generate Board", class: "btn btn-primary" %>
<% end %>

<h2>Recently Generated Boards:</h2>
<ul class="list-group">
  <% @recent_boards.each do |board| %>
    <li class="list-group-item">
      <strong>Board Name:</strong> <%= link_to board.name, board_path(board) %><br>
      <strong>Generated by:</strong> <%= board.email %><br>
      <strong>Created at:</strong> <%= board.created_at.strftime('%B %d, %Y %H:%M') %>
    </li>
  <% end %>
</ul>
<%= link_to "View all generated boards", boards_path, class: "btn btn-primary mt-3" %>