<%= search_form_for @q, url: boards_path do |f| %>
  <!-- Search if the name field contains... -->
  <%= f.label :name_cont %>
  <%= f.search_field :name_cont %>

  <%= f.submit %>
<% end %>

<h2>Generated Boards:</h2>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Board Name</th>
      <th scope="col">Generated by</th>
      <th scope="col">Created at</th>
    </tr>
  </thead>
  <tbody>
    <% @recent_boards.each do |board| %>
      <tr>
        <td><%= link_to board.name, board_path(board) %></td>
        <td><%= board.email %></td>
        <td><%= board.created_at.strftime('%B %d, %Y %H:%M') %></td>
      </tr>
    <% end %>
  </tbody>
</table>


  <%= will_paginate @recent_boards %>
  <%= link_to "Generated by boards", new_board_path, class: "btn btn-primary mt-3" %>


