<h1><%= @board.name %></h1>
<p>Email: <%= @board.email %></p>

<div class="minesweeper-board">
  <table class="table table-bordered">
    <tbody>
      <% @minesweeper_board.each do |row| %>
        <tr>
          <% row.each do |cell| %>
            <td class="">
              <div class="click_chala" style="background-color: black;">
                <% if cell.mine? %>
                  <%= link_to root_path, style: "display: inline-block; width: 100%; height: 100%; color: black;" do %>
                    <span>
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-fire" viewBox="0 0 16 16">
                        <path d="M8 16c3.314 0 6-2 6-5.5 0-1.5-.5-4-2.5-6 .25 1.5-1.25 2-1.25 2C11 4 9 .5 6 0c.357 2 .5 4-2 6-1.25 1-2 2.729-2 4.5C2 14 4.686 16 8 16Zm0-1c-1.657 0-3-1-3-2.75 0-.75.25-2 1.25-3C6.125 10 7 10.5 7 10.5c-.375-1.25.5-3.25 2-3.5-.179 1-.25 2 1 3 .625.5 1 1.364 1 2.25C11 14 9.657 15 8 15Z"/>
                      </svg>
                    </span>
                  <% end %>
                <% else %>
                  &nbsp;
                <% end %>
              </div>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.click_chala').forEach(function(element) {
      element.addEventListener('click', function(event) {
        this.style.background = 'white';
        if (event.target.tagName === 'A') {
          event.preventDefault();
          alert('Your game is over!');
          window.location.href = '<%= root_path %>';
        }
      });
    });
  });
</script>

<%= link_to 'Generated by boards', new_board_path, class: 'btn btn-primary mt-3' %>


